#!/usr/bin/env bash
# Playwright CLI
# Usage: pw <command> [--help|-h]

dir='playwright/test-results/'

print_help() {
	echo "Usage: pw <command> [--help|-h]

Commands:
  results  View test results
  trace    Open trace"
}

one() {
	lines=$(</dev/stdin)

	if [ -z "$lines" ]; then
		return 1
	elif [ "$(echo "$lines" | wc -w)" -eq 1 ]; then
		echo "$lines"
	else
		echo "$lines" | fzf
	fi
}

view_test_results() {
	found_files=0

	# Find and display all the test screenshots
	for file in $(fd -I '.png' $dir); do
		found_files=1
		echo "$file"
		kitty +kitten icat "$file"
	done

	# If no files were found, return an error
	if [ $found_files -eq 0 ]; then
		echo "[error]: No test results found"
		return 1
	fi
}

open_trace() {
	filename=$(fd -I '.zip' $dir | one)

	if [ -n "$filename" ]; then
		yarn playwright show-trace "$filename"
	else
		echo "[error]: No traces found"
		return 1
	fi
}

# Parse the command line args
while [[ $# -gt 0 ]]; do
	case "$1" in
	-h | --help)
		print_help
		exit 0
		;;
	*)
		command="$1"
		shift
		;;
	esac
done

# Test to ensure the directory is present
if [ ! -d "playwright" ]; then
	echo "[error]: Test directory does not exist"
	exit 1
fi

# Run the command
if [ "$command" == "results" ]; then
	view_test_results
elif [ "$command" == "trace" ]; then
	open_trace
else
	print_help
fi
