#!/usr/bin/env bash
# Total number of days since I start at Ramp

company=Ramp
start="2024-07-22"

today=$(date +%Y-%m-%d)
today_seconds=$(date -j -f "%Y-%m-%d" "$today" "+%s")
start_seconds=$(date -j -f "%Y-%m-%d" "$start" "+%s")

# Calculate the number of days
diff=$(((start_seconds - today_seconds) / 86400 + 1))

echo "Today is day $diff at $company"
