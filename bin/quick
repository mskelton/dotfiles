#!/usr/bin/env bash
# Quickly create a TaskWarrior task for home

flags=(rc.verbose= rc.context=none)
cmd="$1"
shift

_print_help() {
	echo 'Usage: quick [command] [args]'
	echo ''
	echo 'Commands:'
	echo '  list'
	echo '  add [title]'
	echo '  close [number]'
}

# Print help if no args are provided
if [[ -z "$cmd" || "$cmd" == 'help' ]]; then
	_print_help
	exit 0
fi

if [[ "$cmd" == 'list' ]]; then
	task "${flags[@]}" +quick
elif [[ "$cmd" == 'add' ]]; then
	task "${flags[@]}" add +quick "$@"
elif [[ "$cmd" == 'close' ]]; then
	task "${flags[@]}" "$@" 'done'
else
	_print_help
	exit 1
fi
