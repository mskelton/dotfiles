# Shared TaskWarrior config
# vim:ft=conf

# Theme
include ~/.config/task/tokyonight.theme

# Files
data.location=~/.task
# hooks.location=~/.config/task/hooks

# Misc
verbose=affected,blank,edit,header,footnote,label,new-id,project,special
bulk=4

# Disable case-sensitive search
search.case.sensitive=no

# Reports
report.next.filter=status:pending -WAITING -BLOCKED limit:page

# Context
context.home.read=-work
context.work.read=+work
context.work.write=+work

# Taskserver
taskd.certificate=~/.task/client.cert.pem
taskd.key=~/.task/client.key.pem
taskd.ca=~/.task/ca.cert.pem

# TUI
uda.taskwarrior-tui.task-report.show-info=false
uda.taskwarrior-tui.task-report.next.filter=status:pending -WAITING -BLOCKED
