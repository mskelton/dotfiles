# vim:ft=fish

# Git aliases
alias dif="git diff"
alias gcp="git cherry-pick"
alias gmc="git merge --continue"
alias pd="git pd"
alias pub="git pub"
alias pull="git pull"
alias push="git push"
alias st="git status"
alias stash="git stash push -u"
alias unstash="git stash pop"

# Other aliases
alias c="code"
alias dock="docker exec -it $1 /bin/bash"
alias dup="docker-compose up -d"
alias gradle="./gradlew"
alias nr="npm run"
alias ns="npm run serve"
alias nui="npm-check -u"
alias t="task"
alias tw="clear && t"
alias y="yarn"
alias ys="yarn serve"
alias yui="yarn upgrade-interactive"

# Tmux
alias tn="tmux new"
alias ta="tmux at"
function tp --description 'alias tp=tmux new -s $1 -c ~/dev/$1'
  tmux new -s $argv -c ~/dev/$argv
end

# Kitty
alias icat="kitty +kitten icat"

# Remap vim to nvim
alias vim="nvim"
alias vi="nvim"
alias oldvim="/usr/bin/vim"

# Python aliases
alias py="python3"
alias pip="pip3"
