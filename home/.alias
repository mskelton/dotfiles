# Git merge
alias dif="git diff"
alias gmc="git merge --continue"
alias gmd="git md"
alias gml="git ml"

# Git rebase
alias grc="git rebase --continue"
alias grd="git rd"
alias grl="git rl"

# Git
alias pd="git pd"
alias pub="git pub"
alias pull="git pull"
alias push="git push"
alias psh="git push"
alias st="git status"
alias stash="git stash push -u"
alias unstash="git unstash"

# GitHub CLI
alias prw="gh prw"

# Tmux
alias ta="tmux attach"
alias tk="tmux kill-server"

# Task Warrior
alias t="task"
alias tt="taskwarrior-tui"
alias tw="clear && t"

# Yarn
alias y="yarn"

# pnpm
alias pn="pnpm"
alias pout="pnpm outdated --format=list"
alias pup="pnpm up --filter='*' --latest"

# Remap vim to nvim
alias vim="nvim"
alias vi="nvim"
alias vis="VIMRUNTIME=$HOME/dev/neovim/runtime $HOME/dev/neovim/build/bin/nvim --luamod-dev"
alias ovim="/usr/bin/vim"

# Use new bash
alias bash="/usr/bin/env bash"
alias oldbash="/bin/bash"

# Kitty
alias icat="kitty +kitten icat"

# Misc
alias def="dict -d '!'"
alias dock="docker exec -it $1 /bin/bash"
alias gradle="./gradlew"
alias pb="pbcopy"
alias lg='lazygit'
alias python='python3'

