# vim:ft=bash

# Git
alias dif="git diff"
alias gmc="git merge --continue"
alias grc="git rebase --continue"
alias gmm="git merge-default"
alias grm="git rebase-default"
alias pd="git pd"
alias pub="git pub"
alias pull="git pull"
alias push="git push"
alias st="git status"
alias stash="git stash push -u"
alias unstash="git stash pop"

# Task Warrior
alias t="task"
alias tw="clear && t"

# Yarn
alias y="yarn"
alias ys="yarn serve"

# Tmux
alias tn="tmux new"
alias ta="tmux at"
alias tl="tmux list-sessions"
alias tk="tmux kill-session"

# Remap vim to nvim
alias vim="nvim"
alias vi="nvim"
alias v="nvim"
alias oldvim="/usr/bin/vim"

# Use new bash
alias bash="/usr/local/bin/bash"
alias oldbash="/bin/bash"

# Kitty
alias icat="kitty +kitten icat"

# Misc
alias def="dict -d '!'"
alias dock="docker exec -it $1 /bin/bash"
alias dup="docker-compose up -d"
alias gim="gimme-aws-creds"
alias gradle="./gradlew"
alias pb="pbcopy"
alias sf="source-fish"
