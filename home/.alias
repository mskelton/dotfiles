# vim:ft=bash

# Git merge
alias gmc="git mc"
alias gmd="git md"
alias gmm="git md"
alias gml="git ml"

# Git rebase
alias grc="git rc"
alias grd="git rd"
alias grl="git rl"

# Git
alias gd="git diff"
alias pub="git pub"
alias pull="git pull"
alias push="git push"
alias psh="git push"
alias st="git status"
alias gs="git status"
alias stash="git stash push -u"
alias unstash="git unstash"

# Tmux
alias ta="tmux attach"
alias tk="tmux-kill-switch"
alias tko="tmux kill-server"

# Todo
alias t="todo today"
alias tw="clear && todo today"

# Package managers
alias b="bun"
alias y="yarn"
alias yd="yarn dev"
alias ys="yarn start"
alias yt="yarn test:e2e"
alias yr="yarn test:e2e:record"
alias pn="pnpm"
alias pout="pnpm outdated --format=list"
alias pup="pnpm up --filter='*' --latest"

# Remap vim to nvim
alias vim="nvim"
alias vi="nvim"
alias vis="VIMRUNTIME=$HOME/dev/neovim/runtime $HOME/dev/neovim/build/bin/nvim --luamod-dev"
alias ovim="/usr/bin/vim"

# Use new bash
alias bash="/usr/bin/env bash"
alias oldbash="/bin/bash"

# Kitty
alias icat="/Applications/kitty.app/Contents/MacOS/kitty +kitten icat --align=left"

# Docker
alias dau="docker compose --profile app up"
alias dad="docker compose --profile app down"

# Pomo
alias p5="pomo start 5m"
alias p10="pomo start 10m"
alias p15="pomo start 15m"
alias p20="pomo start 20m"
alias p25="pomo start 25m"
alias p30="pomo start 30m"

# Timer
alias t5="timer 5"
alias t10="timer 10"
alias t15="timer 15"
alias t20="timer 20"
alias t25="timer 25"
alias t30="timer 30"

# Misc
alias def="dict -d '!'"
alias gradle="./gradlew"
alias pb="pbcopy"
alias lg='lazygit'
alias python='python3'
alias xit="exit"
