# Taskwarrior program configuration file.

# Files
data.location=~/.task
# hooks.location=~/.config/task/hooks

# Misc
include dark-violets-256.theme
news.version=2.6.0
verbose=affected,blank,context,edit,header,footnote,label,new-id,project,special,sync,override
bulk=4

# Disable case-sensitive search
search.case.sensitive=no

# Reports
report.next.filter=status:pending -WAITING -BLOCKED limit:page

# Context
context.home.read=project != Analyzer
context.analyzer.read=project:Analyzer
context.analyzer.write=project:Analyzer

