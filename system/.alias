# vim:ft=bash

# Git merge
alias gmc="git mc"
alias gmd="git md"
alias gmm="git md"
alias gml="git ml"

# Git rebase
alias grc="git rc"
alias grd="git rd"
alias grl="git rl"

# Git
alias pub="git pub"
alias pull="git pull"
alias push="git push"
alias psh="git push"
alias st="git status"
alias gs="git status"
alias stash="git stash push -u"
alias unstash="git unstash"
alias cpr="$HOME/go/bin/pr"
alias cprd="$HOME/go/bin/pr -d"
alias main="git-cleanup"

# Tmux
alias ta="tmux attach"
alias tk="tmux-kill-switch"
alias tko="tmux kill-server"

# Todo
alias t="todo today"
alias tw="clear && todo today"

# Package managers
alias b="bun"
alias y="yarn"
alias yd="yarn dev"
alias yt="yarn test:e2e"
alias yr="yarn test:e2e:record"
alias yrl="yarn test:e2e:record --last-failed"
alias pn="pnpm"
alias pout="pnpm outdated --format=list"
alias pup="pnpm up --filter='*' --latest"

# Remap vim to nvim
alias vim="nvim"
alias vi="nvim"
alias vis="VIMRUNTIME=$HOME/dev/neovim/runtime $HOME/dev/neovim/build/bin/nvim --luamod-dev"
alias ovim="/usr/bin/vim"

# Use new bash
alias bash="/usr/bin/env bash"
alias oldbash="/bin/bash"

# Kitty
alias icat="/Applications/kitty.app/Contents/MacOS/kitty +kitten icat --align=left"

# Docker
alias dau="docker compose --profile app up"
alias dad="docker compose --profile app down"

# Misc
alias def="dict -d '!'"
alias gradle="./gradlew"
alias pb="pbcopy"
alias lg='lazygit'
alias python='python3'
alias xit="exit"

# Claude/Codex
alias c="claude --dangerously-skip-permissions"
alias cx="codex -m gpt-5 -c model_reasoning_effort=high --dangerously-bypass-approvals-and-sandbox"
