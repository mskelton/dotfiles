#!/usr/bin/env bash
# Playwright CLI
# Usage: pw <command> [--help|-h]

print_help() {
	echo "Usage: pw <command> [--help|-h]

Commands:
  screenshots  View test screenshots
  video        View test video
  trace        Open test trace"
}

one() {
	lines=$(</dev/stdin)

	if [ -z "$lines" ]; then
		return 1
	elif [ "$(echo "$lines" | wc -w)" -eq 1 ]; then
		echo "$lines"
	else
		echo "$lines" | fzf
	fi
}

view_test_screenshots() {
	files=$(fd -I '.png' "$1")

	# Find and display all the test screenshots
	if test "$TERM" = "xterm-kitty"; then
		for file in $files; do
			echo "$file"
			kitty +kitten icat --align left "$file"
		done
	else
		# cursor $files
		for file in $files; do
			echo "$file"
			timg -p sixel "$file"
		done
	fi

	# If no files were found, return an error
	if [ -z "$files" ]; then
		echo "[error]: No test screenshots found"
		return 1
	fi
}

view_video() {
	filename=$(fd -I '.webm' "$1")

	if [ -z "$filename" ]; then
		echo "[error]: No videos found"
		return 1
	fi

	for file in $filename; do
		open "$file"
	done
}

open_trace() {
	files=$(fd -I '.zip' "$1")

	# If no files were found, return an error
	if [ -z "$files" ]; then
		echo "[error]: No traces found"
		return 1
	fi

	# Store PIDs of background jobs
	pids=()

	# Trap SIGINT/SIGTERM to kill all background jobs
	trap 'kill "${pids[@]}" 2>/dev/null; exit 130' INT TERM

	# Open all traces
	for file in $files; do
		yarn playwright show-trace "$file" &
		pids+=($!)
	done

	# Wait for all jobs to complete
	wait

	# Clean up trap
	trap - INT TERM
}

# Parse the command line args
while [[ $# -gt 0 ]]; do
	case "$1" in
	-h | --help)
		print_help
		exit 0
		;;
	*)
		command="$1"
		shift
		;;
	esac
done

dir=$(fd -I -E node_modules -t d test-results | one)

# Test to ensure the directory is present
if [ -z "$dir" ]; then
	echo "[error]: Test directory does not exist"
	exit 1
fi

# Run the command
if [ "$command" == "screenshots" ]; then
	view_test_screenshots "$dir"
elif [ "$command" == "video" ]; then
	view_video "$dir"
elif [ "$command" == "trace" ]; then
	open_trace "$dir"
else
	print_help
fi
