#!/usr/bin/env bash
# Commit changes

set -euo pipefail

_print_help() {
  echo "Commit changes

Usage: c <commit_message>

Options:
  -h, --help             Display this help message and exit

Arguments:
  <commit_message>       The commit message for the changes.
"
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  _print_help
  exit 0
fi

git commit -m "$*"
