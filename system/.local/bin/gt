#!/usr/bin/env bash
# Wrapper around Graphite to fix some paper cuts

set -euo pipefail

gt=/opt/homebrew/bin/gt

# Prevent recursive aliases
if [[ -n "${GT_NO_ALIAS:-}" ]]; then
	/opt/homebrew/bin/gt "$@"
	exit
fi

get_alias() {
	filename=$HOME/.config/graphite/custom-aliases

	# Read the aliases from the config file
	if [ ! -f "$filename" ]; then
		return
	fi

	while IFS= read -r line; do
		alias_name=$(echo "$line" | awk '{print $1}')

		if [[ "$alias_name" == "$1" ]]; then
			echo "$line" | cut -d' ' -f2-
			return
		fi
	done <"$filename"
}

alias=$(get_alias "$1")

if [ -z "$alias" ]; then
	$gt "$@"
elif [[ "$alias" == "!"* ]]; then
	GT_NO_ALIAS=1 eval "${alias:1}"
else
	$gt $alias "${@:2}"
fi
